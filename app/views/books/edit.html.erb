<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <% if @book.errors.count == 1 %>
            <h3>
              <%= @book.errors.count %> error prohibited this obj from being saved:
            </h3>
          <% else %>
            <h3>
              <%= @book.errors.count %> errors prohibited this obj from being saved:
            </h3>
          <% end %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
         </div>
       <% end %>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <div class="form-group">
        <label for="user_title">Title</label><br>
        <%= f.text_field :title, class: "form_control_title" %>
      </div>
      <div class="form-group">
        <label for="user_opinion">Opinion</label><br>
        <%= f.text_area :body, class: "form_control_body" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>