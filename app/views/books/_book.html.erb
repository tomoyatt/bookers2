 <div class="container px-5 px-sm-0">
     
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: '/books', method: :post do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
      
    </div>